    "version": "2.0.0",
    "tasks": [{
            "label": "Run Test",
            "type": "shell",
            "command": "python -m pytest -o markers=task ${file}",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Submit Exercise",
            "type": "shell",
            "command": "exercism submit ${file}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
